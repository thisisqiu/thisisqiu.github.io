/* pages/my/my.wxss */
.userBox{
  width: 100%;
  height: 560rpx;
  position: relative;
  }
.img{
    width: 100%;
}
.userImg{
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  float: left;
}
.login{
    position: absolute;
    left:30%;
    top:28%;
    width:40%;
    display: block;
    outline: 0 none;
    -webkit-appearance: none;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0;
    text-align: center;
    font-size: 50rpx;
    height: 110rpx;
    line-height: 110rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-word;
    white-space: nowrap;
    color: rgb(250, 250, 250);
    background-color: rgb(141, 108, 84);
    border-radius: 10rpx;
}
.userInfo{
    position: absolute;
    top:46%;
    font-size: 70rpx;
    left:20%;
    width:60%;
    text-align: center;
    color:rgb(43, 36, 31);
    line-height: 150rpx;
}
.show{
    position: absolute;
    top:50%;
    left:20%;
    width:60%;
    line-height: 100rpx;
    display: block;
    padding: 2rpx 0;
    background-color: #fff;
    border: 1rpx solid #ddd;
    border-radius: 6rpx;
    color:rgb(85, 65, 48);
}
.show text:first-child{
  border-right: 1rpx solid rgb(85, 65, 48);
}
.show text{
    width: 49.5%;
    text-align: center;
    display: inline-block;
    font-size: 36rpx;
    color:rgb(70, 59, 51);
  }
  .photoBtn{
    width: 96%;
    margin: 1% 2%;
    background-color: #d1cfcd;
    color:rgb(83, 69, 61);
    letter-spacing: 2rpx;
  }
.photo{
  width: 98%;
  margin: 1% 1%;
  border: 1px solid #ddd;
}
.actionBox{
  line-height: 70rpx;
  font-size: 38rpx;
  text-align: center;
  border-top:1rpx solid #ddd;
  color:rgb(58, 42, 32);
}
.actionBox text{
  font-size: 50rpx;
  line-height: 10rpx;
  font-family: bold;
  margin-top: -20rpx;
}
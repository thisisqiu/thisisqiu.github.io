/* pages/gooddetail/gooddetail.wxss */
.goodBox{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}
.goodBox .img{
  width: 100%;
  height: 760rpx;
}
.goodBox text{
  display: block;
  font-size: 44rpx;
  line-height: 70rpx;
  color:rgb(43, 37, 31);
}
.actionBox{
  margin: 0 40rpx;
}
.actionBox button{
  height: 70rpx;
  line-height: 70rpx;
  background-color: rgb(170, 132, 101);
  font-size: 40rpx;
  width: 30rpx;
  display: inline-block;
  text-indent: -11rpx;
  color:#fff;
  margin-bottom: 10rpx;
}
.actionBox input{
  display: inline-block;
  height: 50rpx;
  width: 74rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 14rpx;

}
.goodBox view{
  font-size: 36rpx;
  line-height: 42rpx;
  color: rgb(14, 12, 9);
}
.tip{
  width: 98%;
  margin: 0 1%;
  height: 280rpx;
  margin-top: 30rpx;
  margin-bottom: 114rpx;
}
.foot{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  height:110rpx;
  color: #fff;
  width: 100%;
}
.foot span{
  float: left;
  width: 50%;
  line-height: 110rpx;
  font-size: 38rpx;
  text-align: center;
  background-color: #7d5440;
}
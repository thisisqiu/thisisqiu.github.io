/* pages/mycar/mycar.wxss */
.content{
  margin-bottom: 120rpx;
}
.li {
  display: flex;
  width: 100%;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.15);
  padding: 0 17rpx;
  align-items: center;
}

.cover {
  width: 200rpx;
  height: 200rpx;
  left: 20rpx;
  z-index: 2;
}

image {
  width: 100%;
  height: 100%;
}

.cont {
  width: 50%;
  margin-left: 20rpx;
}

.cont .title {
  margin-top:40rpx;
  font-size: 32rpx;
  color:#000;
}

.cont .pricebox {
  line-height: 100rpx;
  height: 130rpx;
  font-size: 30rpx;
  display: flex;
  color:rgb(117, 89, 57);
}

.pricebox input {
  width: 50rpx;
  text-align: center;
  display: inline-block;
  font-size: 32rpx;
}


.pricebox .numbox {
  display: flex;
  align-items: center;
  margin-left: 150rpx;
  font-size: 32rpx;
}

.pricebox> text{
  color:rgba(119, 81, 46, 0.932);
}

.del {
  font-size: 24rpx;
  color: rgb(219, 31, 31);
}

.footer{
    position: fixed;
    bottom: 0;
    z-index: 99;
    background: #fff;
    width: 100%;
    height: 120rpx;
    border-top: 2rpx solid #f9f8f7;
    line-height: 120rpx;
    font-size:26rpx;
}

.price{
  margin-left:100rpx;
}

.add{
  margin-right:10rpx;
}

.reduce{
  margin-left:10rpx;
}

.checkall{
  display: inline-block;
  margin-left:20rpx;
}

.footer text{
  position: absolute;
  top:0;
}
.total{
  right:240rpx;
  width:160rpx;
}
.order{
  right:60rpx;
  font-size: 34rpx;
  color:rgb(53, 42, 29);
}